<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Vision Computers</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
   
</head>
<body id="clrblk">
    <div class="" style="background-image: url('images/bg_2.jpg'); background-attachment:fixed;height:100%;">

        <div class="container" style="text-align: center;">   
        <div id="loginbox" style="margin-top:100px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                   
            <p><a href="/" class="btn btn-primary"style="background-color:#6f42c1">Home</a></p>

            <div class="panel panel-info" >
                    <div class="panel-heading" style="background-color:#6f42c1;">
                        <div class="panel-title"style="color:white">Sign In</div>
                        <!--<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>-->
                    </div>    
 
                    <div style="padding-top:30px" class="panel-body" >
                                                                        
                           
                        <form id="loginform" class="form-horizontal" role="form" method="post" action="/login">
                            <% if (message.length > 0) { %>
                                <div class="alert alert-success col-sm-12"><%= message %></div>
                    <% } %>     
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input id="login-username" type="text" class="form-control" name="user_name" value="" placeholder="username">                                       
                                    </div>
                               
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                                    </div>
                                   
 
                               
                            <div class="input-group">
                                      <!--<div class="checkbox">
                                        <label>
                                          <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                        </label>
                                      </div>-->
                                    </div>
 
 
                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->
 
                                    <div class="col-sm-12 controls">
                                      <button id="btn-login" type="submit" class="btn btn-success"style="background-color:#6f42c1;">Login  </button>
                                     
 
                                    </div>
                                </div>
 
 
                                <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:20px" >
                                            Don't have an account!
                                        <a href="/signup" style="color:#6f42c1;">
                                            Sign Up Here
                                        </a>
                                        </div>
                                    </div>
                                </div>   
                            </form>    
 
 
 
                        </div>                    
                    </div> 
        </div>
       
    </div>
</body>
</html>
